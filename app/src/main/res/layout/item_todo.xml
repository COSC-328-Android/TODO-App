<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="12dp"
              android:layout_marginBottom="8dp"
              android:background="@drawable/todo_item_background"
              android:elevation="2dp">

    <ImageButton
            android:id="@+id/completeButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_circle"
            android:background="@drawable/button_circle_blue"
            android:scaleType="center"
            android:layout_marginEnd="12dp"
            android:contentDescription="Mark as complete" />

    <TextView
            android:id="@+id/todoText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sample_todo"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_gravity="center_vertical"
            android:paddingVertical="8dp" />

    <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_delete"
            android:background="@drawable/button_circle_red"
            android:scaleType="center"
            android:layout_marginStart="8dp"
            android:contentDescription="Delete todo" />

</LinearLayout>